<Project>
    <PropertyGroup>
        <NSubsysTasksPath Condition="'$(NSubsysTasksPath)' == ''">$(MSBuildThisFileDirectory)..\tools\NSubsys.Tasks.dll</NSubsysTasksPath>
    </PropertyGroup>
    <UsingTask TaskName="NSubsys.Tasks.NSubsys" AssemblyFile="$(NSubsysTasksPath)" />
    <Target Name="NSubsys" AfterTargets="Build" Condition="'$(OutputType)' == 'Exe' OR '$(OutputType)' == 'WinExe'">      
      <NSubsys TargetFile="$(TargetPath)" />
    </Target>
</Project>

